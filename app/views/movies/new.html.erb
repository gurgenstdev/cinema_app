<h1>Adding new movie to the list</h1>

<%= link_to("<<Back to the list", movies_path) %>

<%= form_for(@movie) do |m| %>
  <% if @movie.errors.any? %>
    <% @movie.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>
  <p>
    Name
    <%= m.text_field :name %>
  </p>
  <p>
    Year
    <%= m.text_field :year %>
  </p>
  <p>
    Rating
    <%= m.text_field :rating %>
  </p>
  <p>
    Genre
    <%= m.text_field :genre %>
  </p>
  <p>
    Duration
    <%= m.text_field :duration %>
  </p>
  <p>
    <%= m.submit value="Add Movie" %>
  </p>
<% end %>