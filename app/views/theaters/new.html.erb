<h1>Add New Movie Theatre</h1>

<%= link_to("<<Back to the list", theaters_path) %>

<%= form_for(@theater) do |t| %>
  <p>
    Name:
    <%= t.text_field :name %>
  </p>
  <p>
    Email:
    <%= t.text_field :email %>
  </p>
  <p>
    Address:
    <%= t.text_field :address %>
  </p>
  <p>
    Phone Number:
    <%= t.text_field :phone_number %>
  </p>
  <p>
    <%= t.submit value="Add Theater" %>
  </p>
<% end %>